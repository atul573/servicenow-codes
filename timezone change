function onChange(control, oldValue, newValue, isLoading) {
  if (isLoading || !newValue) return;

  // Converts ANY timezone input to IST and returns a formatted string
  function convertToIST(inputDateTime) {
    // Parse as local time based on browser timezone
    const localDate = new Date(inputDateTime);

    // Get UTC time from local time
    const utcMillis = localDate.getTime() + (localDate.getTimezoneOffset() * 60000);

    // IST is UTC + 5:30 (330 minutes)
    const istMillis = utcMillis + (330 * 60000);
    const istDate = new Date(istMillis);

    // Format IST Date as "dd-MM-yyyy HH:mm:ss IST"
    const day = String(istDate.getDate()).padStart(2, '0');
    const month = String(istDate.getMonth() + 1).padStart(2, '0');
    const year = istDate.getFullYear();
    const hours = String(istDate.getHours()).padStart(2, '0');
    const minutes = String(istDate.getMinutes()).padStart(2, '0');
    const seconds = String(istDate.getSeconds()).padStart(2, '0');

    return `${day}-${month}-${year} ${hours}:${minutes}:${seconds} IST`;
  }

  const originalDate = g_form.getValue('start_date'); // Replace with your datetime field
  const istDateString = convertToIST(originalDate);

  g_form.setValue('start_date_string', istDateString); // Replace with your string field
}